---
import Layout from '../layouts/Layout.astro';
import data from '../data/business-data.json';
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Message Sent">
  <main class="py-32 px-6 text-center max-w-7xl mx-auto">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 text-green-600 rounded-full mb-8">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
      </svg>
    </div>
    
    <h1 class="text-4xl font-bold text-slate-900 leading-tight">
      Thank You!
    </h1>
    <p class="mt-4 text-lg text-slate-600 max-w-md mx-auto">
      Your message has been sent to the {data.businessName} team. We'll get back to you shortly.
    </p>

    <div class="mt-10">
      <a 
        href={baseUrl} 
        class="inline-block bg-brand-primary text-white font-semibold py-3 px-8 rounded-full hover:bg-brand-hover transition-all"
      >
        Back to Home
      </a>
    </div>
  </main>
</Layout>