---
import Layout from '../layouts/Layout.astro';
import data from '../data/business-data.json';
const baseUrl = import.meta.env.BASE_URL;

// Helper to handle paths (same as your Nav/Footer)
const getPath = (path: string) => {
  const cleanBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  return `${cleanBase}${cleanPath}`;
};
---

<Layout title="Message Received">
  <main class="flex items-center justify-center min-h-[70vh] px-6">
    <div class="text-center max-w-md">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 text-green-600 rounded-full mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      
      <h1 class="text-3xl font-bold text-slate-900 mb-4">Message Sent!</h1>
      <p class="text-slate-600 mb-8">
        Thank you for reaching out to {data.businessName}. We have received your inquiry and will get back to you shortly.
      </p>
      
      <a 
        href={getPath('/')} 
        class="inline-block bg-brand-primary text-white font-semibold py-3 px-8 rounded-full hover:bg-brand-hover transition-all shadow-md"
      >
        Back to Home
      </a>
    </div>
  </main>
</Layout>